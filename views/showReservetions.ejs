<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.0/css/bulma.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma-carousel@4.0.4/dist/css/bulma-carousel.min.css" />
    <script defer src="https://cdn.jsdelivr.net/npm/bulma-carousel@4.0.4/dist/js/bulma-carousel.min.js"></script>
    <link rel="stylesheet" href="https://use.typekit.net/kxn5msc.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link href="/assets/css/bootstrap-datetimepicker.css" rel="stylesheet" media="screen">

</head>
<body>
    <%- include('navbar') %>

   

                <% reservation.forEach(reservation => { %>

                <div class="columns is-desktop mx-6 px-6 mb-6">
                    <div class="column is-half">
                        <h1 class="muli-36 has-text-primary is-uppercase">rental details</h1>
                      </section>
                      <!-- Kraj Tekst ispod kartice-->
                      <div class="box">
                          <div class="columns is-desktop">
                      <div class="column is-2">
                        <p class="muli-22 mt-2">Name:</p>
                      </div>
                        <div class="column is-9">
                                <p class="muli-23 mt-2"><%= reservation.firstName %></p>
                          </div>
                      </div>
                      <div class="columns is-desktop">
                        <div class="column is-3">
                          <p class="muli-22 mt-2">Surname:</p>
                        </div>
                          <div class="column is-9">
                                  <p class="muli-23 mt-2"><%= reservation.lastName %></p>
                            </div>
                        </div>
                        <div class="columns is-desktop">
                          <div class="column is-4">
                            <p class="muli-22 mt-2">Pick-up date:</p>
                          </div>
                            <div class="column is-8">
                                    <p class="muli-23 mt-2"><%= reservation.startDate %></p>
                              </div>
                          </div>
                          <div class="columns is-desktop">
                            <div class="column is-4">
                              <p class="muli-22 mt-2">Drop-off date:</p>
                            </div>
                              <div class="column is-8">
                                      <p class="muli-23 mt-2"><%= reservation.endDate %></p>
                                </div>
                            </div>
                            <div class="columns is-desktop">
                              <div class="column is-5">
                                <p class="muli-22 mt-2">Pick-up location:</p>
                              </div>
                                <div class="column is-7">
                                        <p class="muli-23 mt-2"><%= reservation.pickUp %></p>
                                  </div>
                              </div>
                              <div class="columns is-desktop">
                                <div class="column is-5">
                                  <p class="muli-22 mt-2">Drop-off location:</p>
                                </div>
                                  <div class="column is-7">
                                          <p class="muli-23 mt-2"><%= reservation.dropOff %></p>
                                    </div>
                                </div>

                                <div class="columns is-desktop">
                                    <div class="column is-5">
                                      <p class="muli-22 mt-2">Model:</p>
                                    </div>
                                      <div class="column is-7">
                                              <p class="muli-23 mt-2">   <% cars.forEach(car => { %> 

                                                <%  if(car._id == reservation.auto_id ) { %>
                                                     <%= car.model %>
                                                <%  } %>
                                                     
                                                  <% }) %></p>
                                        </div>
                                    </div>


                                    <div class="columns is-desktop">
                                        <div class="column is-5">
                                          <p class="muli-22 mt-2">Car year:</p>
                                        </div>
                                          <div class="column is-7">
                                                  <p class="muli-23 mt-2">   <% cars.forEach(car => { %> 

                                                    <%  if(car._id == reservation.auto_id ) { %>
                                                         <%= car.year %>
                                                    <%  } %>
                                                         
                                                      <% }) %></p>
                                            </div>
                                        </div>

                                        <div class="columns is-desktop">
                                            <div class="column is-5">
                                              <p class="muli-22 mt-2">Color:</p>
                                            </div>
                                              <div class="column is-7">
                                                      <p class="muli-23 mt-2">   <% cars.forEach(car => { %> 
    
                                                        <%  if(car._id == reservation.auto_id ) { %>
                                                             <%= car.color %>
                                                        <%  } %>
                                                             
                                                          <% }) %></p>
                                                </div>
                                            </div>
                                </div>
                  
                  
                  
                    </div>
                    <div class="column is-half mt-6">
                      <figure class="image is-16by9 mt-6">
                    <img src="./images/auto-home.png">
                  </figure>
                  
                  
                  
                    </div>
                  </div>

                <% }) %>
         </tbody>
     </table>
     
    
     <a href="/">Go Back to Cars</a>

     <form action="/logout?_method=DELETE" method="POST">
        <button type="submit">Odjavi se</button>
    </form>
    <%- include('footer2') %>

</body>
</html>